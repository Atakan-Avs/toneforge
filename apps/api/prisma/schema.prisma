generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum PlanCode {
  FREE
  PRO
  PREMIUM
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())

  activeOrgId String?
  activeOrg   Organization? @relation("ActiveOrg", fields: [activeOrgId], references: [id])

  brandVoices  BrandVoice[]
  templates    Template[]
  replies      Reply[]
  memberships  Membership[]
}

model BrandVoice {
  id          String   @id @default(cuid())
  name        String
  description String
  createdAt   DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  orgId String
  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  replies Reply[]
}

model Template {
  id        String   @id @default(cuid())
  category  String // kargo, iade, fiyat, stok...
  content   String // template metni
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  orgId String
  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  replies Reply[]
}

model Reply {
  id              String   @id @default(cuid())
  orgId           String
  customerMessage String
  tone            String
  result          String
  createdAt       DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  org Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  brandVoiceId String?
  brandVoice   BrandVoice? @relation(fields: [brandVoiceId], references: [id])

  templateId String?
  template   Template? @relation(fields: [templateId], references: [id])

  feedback ReplyFeedback?
}

model Usage {
  id        String   @id @default(cuid())
  orgId     String
  period    String // "YYYY-MM" (UTC month key)
  count     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  org Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@unique([orgId, period], name: "org_period_unique")
  @@index([orgId, period])
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())

  // -----------------------------
  // Billing / Plans
  // -----------------------------
  planCode         PlanCode @default(FREE)
  stripeCustomerId String?  @unique

  subscription     Subscription?
  stripeEvents     StripeEvent[]

  // -----------------------------
  // Existing relations
  // -----------------------------
  members      Membership[]
  brandVoices  BrandVoice[]
  templates    Template[]
  replies      Reply[]
  usages       Usage[]

  activeUsers User[] @relation("ActiveOrg")
}

model Membership {
  id        String   @id @default(cuid())
  role      String // "owner" | "member"
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  orgId String

  @@unique([userId, orgId])
  @@index([orgId])
}

model Subscription {
  id                   String   @id @default(cuid())

  orgId                String   @unique
  org                  Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  stripeSubscriptionId String?  @unique
  stripePriceId        String?
  status               String   // active, trialing, canceled, past_due, incomplete...
  cancelAtPeriodEnd    Boolean  @default(false)
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?

  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@index([orgId])
  @@index([stripeSubscriptionId])
}

model StripeEvent {
  id            String   @id @default(cuid())
  stripeEventId String   @unique // Stripe event.id (idempotency i√ßin)
  type          String
  createdAt     DateTime @default(now())

  orgId String?
  org   Organization? @relation(fields: [orgId], references: [id], onDelete: SetNull)

  @@index([orgId])
  @@index([stripeEventId])
}

model ReplyFeedback {
  id        String   @id @default(cuid())
  replyId   String   @unique
  reply     Reply    @relation(fields: [replyId], references: [id], onDelete: Cascade)
  
  rating    String   // "thumbs_up" | "thumbs_down"
  reason    String?  // Optional feedback reason/text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([replyId])
  @@index([rating])
}