{
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,

    "types": ["vite/client"],

    "noUnusedLocals": false,
    "noUnusedParameters": false,

    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src", "vite-env.d.ts"]
}

